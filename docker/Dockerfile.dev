FROM node:24-slim AS build

ARG PORT=4321
ARG PNPM_VERSION=10.4.1
ENV PORT=${PORT}

WORKDIR /usr/src/app

RUN corepack enable && corepack prepare pnpm@${PNPM_VERSION} --activate
COPY package.json pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile

COPY . .

RUN pnpm run build
EXPOSE ${PORT}

CMD ["pnpm", "run", "serve"]
